{
    "files.insertFinalNewline": true,
    "asciidoc.antora.enableAntoraSupport": true,
    "docker.languageserver.formatter.ignoreMultilineInstructions": true, // stop it autoindenting intentionally indented stuff like the apt install package list
    "editor.formatOnSave": true,
    "hediet.vscode-drawio.resizeImages": null,
    "rust-analyzer.checkOnSave": true,
    "rust-analyzer.imports.group.enable": true,
    "terminal.integrated.allowChords": false, // otherwise I cannot kill pods in k9s
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",
    "git.confirmSync": false,
    "security.workspace.trust.untrustedFiles": "open",
    "git.autofetch": true,
    "evenBetterToml.formatter.compactArrays": true,
    "evenBetterToml.formatter.arrayAutoCollapse": true,
    "evenBetterToml.formatter.arrayAutoExpand": false,
    "evenBetterToml.formatter.reorderKeys": false,
    "evenBetterToml.formatter.reorderArrays": false,
    "evenBetterToml.formatter.alignComments": false,
    "hediet.vscode-drawio.theme": "Kennedy",
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "terminal.integrated.scrollback": 20000,
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.shellIntegration.enabled": false,
    "scm.diffDecorationsIgnoreTrimWhitespace": "true",
    "window.zoomLevel": 0,
    "editor.renderWhitespace": "all",
    "diffEditor.ignoreTrimWhitespace": true,
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#349800",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "fixme",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],
    "ruff.nativeServer": true,
    "ruff.showNotifications": "onWarning",
    "[yaml]": {
        "diffEditor.ignoreTrimWhitespace": true
    },
    "editor.minimap.enabled": false,
    "debug.allowBreakpointsEverywhere": true,
    "nixEnvSelector.nixFile": "${workspaceFolder}/flake.nix",
    "task.problemMatchers.neverPrompt": {
        "shell": true
    },
    "taskExplorer.enableSideBar": true,
    "gitlens.graph.layout": "editor",
    "workbench.startupEditor": "none",
    "editor.fontSize": 16,
    // "editor.wordWrap": "wordWrapColumn",
    // "editor.wordWrapColumn": 1000,
    "editor.wrappingIndent": "deepIndent",
    "rust-analyzer.cargo.targetDir": ".ra",
    "editor.inlayHints.enabled": "onUnlessPressed",
    "git.closeDiffOnOperation": true,
    "terminal.integrated.stickyScroll.enabled": true
}
