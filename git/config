; user.signingkey
[include]
  path = local.gitconfig

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3

[pull]
  rebase = true

[push]
  autoSetupRemote = true

